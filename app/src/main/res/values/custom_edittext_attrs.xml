<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="custom_edittext">
        <attr name="colorDefaultColor" format="color"></attr>
        <attr name="iconText" format="string"></attr>
        <attr name="iconSize" format="dimension"></attr>
        <attr name="iconColor" format="color"></attr>
        <attr name="hintText" format="string"></attr>
        <attr name="hintColor" format="color"></attr>
        <attr name="text" format="string"></attr>
        <attr name="textSize" format="dimension"></attr>
        <attr name="textColor" format="color"></attr>
        <attr name="hrColor" format="color"></attr>
        <attr name="isEdit" format="boolean"></attr>
        <attr name="decimalNumber" format="integer"></attr>
 <!-- 小数后几位 -->
        <attr name="maxLength" format="integer"></attr>
 <!-- 字符长度限制 -->
        <attr name="inputType">

            <!-- //文本类型，多为大写、小写和数字符号。 -->
            <enum name="none" value="0x00000000" />
            <!-- //输入普通字符 -->
            <enum name="text" value="0x00000001" />
            <!-- //输入普通字符 -->
            <enum name="textCapCharacters" value="0x00001000" />
            <!-- //输入普通字符 -->
            <enum name="textCapWords" value="0x00002000" />
            <!-- //单词首字母大小 -->
            <enum name="textCapSentences" value="0x00004000" />
            <!-- //仅第一个字母大小 -->
            <enum name="textAutoCorrect" value="0x00008000" />
            <!-- //前两个自动完成 -->
            <enum name="textAutoComplete" value="0x00010000" />
            <!-- //前两个自动完成 -->
            <enum name="textMultiLine" value="0x00020000" />
            <!-- //多行输入 -->
            <enum name="textImeMultiLine" value="0x00040000" />
            <!-- //输入法多行（不一定支持） -->
            <enum name="textNoSuggestions" value="0x00080000" />
            <!-- //不提示 -->
            <enum name="textUri" value="0x00000010" />
            <!-- //URI格式 -->
            <enum name="textEmailAddress" value="0x00000020" />
            <!-- //电子邮件地址格式 -->
            <enum name="textEmailSubject" value="0x00000030" />
            <!-- //邮件主题格式 -->
            <enum name="textShortMessage" value="0x00000040" />
            <!-- //短消息格式 -->
            <enum name="textLongMessage" value="0x00000050" />
            <!-- //长消息格式 -->
            <enum name="textPersonName" value="0x00000060" />
            <!-- //人名格式 -->
            <enum name="textPostalAddress" value="0x00000070" />
            <!-- //邮政格式 -->
            <enum name="textPassword" value="0x00000080" />
            <!-- //密码格式 -->
            <enum name="textVisiblePassword" value="0x00000090" />
            <!-- //密码可见格式 -->
            <enum name="textWebEditText" value="0x000000a0" />
            <!-- //作为网页表单的文本格式 -->
            <enum name="textFilter" value="0x000000b0" />
            <!-- //文本筛选格式 -->
            <enum name="textPhonetic" value="0x000000c0" />
            <!-- //拼音输入格式 -->
            <!-- //数值类型 -->
            <enum name="number" value="0x00000002" />
            <!-- //数字格式 -->
            <!-- <enum name="numberSigned" value="0x00001000" /> -->
            <!-- //有符号数字格式 -->
            <!-- <enum name="numberDecimal" value="0x00002000" /> -->
            <!-- //可以带小数点的浮点格式 -->
            <enum name="decimal" value="0x00902000" />
            <!-- //小数 -->
            <enum name="phone" value="0x00000003" />
            <!-- //拨号键盘 -->
            <enum name="datetime" value="0x00000004" />
            <!-- //日期+时间格式 -->
            <enum name="date" value="0x00000010" />
            <!-- //日期键盘 -->
            <enum name="time" value="0x00000020" />
            <!-- //时间键盘 -->
        </attr>
    </declare-styleable>

</resources>